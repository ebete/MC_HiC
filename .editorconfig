# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*.{py, sh, R}]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.R]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
